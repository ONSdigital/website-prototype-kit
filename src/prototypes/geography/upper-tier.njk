---js
{
  layout: 'prototype',
  warning: true,
  permalink: 'prototypes/geography/{{ upperTier.slug }}/',
  pagination: {
    data: 'all',
    size: 1,
    alias: 'upperTier',
    before: (data) => data.flatMap(({children}) => children)
  },
}
---

{% set breadcrumbs = [
    {
        href: "/",
        title: "Home"
    }, {
        href: "/prototypes/geography/",
        title: "Regions"
    }, {
        href: "/prototypes/geography/",
        title: upperTier.parent.name
    }, {
        title: upperTier.name
    }
] %}

<div class="wrapper prototype">
    <div class="col-wrap">
        <div class="col col--md-one col--lg-one margin-bottom--8">

            {% include "breadcrumbs.html" %}

            <h1 class="margin-top--2 margin-bottom--0">{{ upperTier.name }}</h1>
            <h5 class="margin-top--0 margin-bottom--4">Upper tier local authority</h5>

            <ul>
                {% for child in upperTier.children %}
                    <li style="margin: 0; padding: 0">
                        <a href="/prototypes/geography/{{ child.slug }}">{{child.name}}</a>
                    </li>
                {% endfor %}
            </ul>

        </div>
    </div>
</div>